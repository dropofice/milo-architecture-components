<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/primary"
        android:contentDescription="@string/image_description"
        android:src="@drawable/dog_poop_300px" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/name_label"
                style="@style/DetailsLabel"
                android:text="@string/name_label"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/breed_label"
                style="@style/DetailsLabel"
                android:text="@string/breed_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/gender_label"
                style="@style/DetailsLabel"
                android:text="@string/gender_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/breed_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/birth_date_label"
                style="@style/DetailsLabel"
                android:text="@string/birth_date_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gender_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/weight_label"
                style="@style/DetailsLabel"
                android:text="@string/weight_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/birth_date_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/owner_label"
                style="@style/DetailsLabel"
                android:text="@string/owner_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/weight_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/address_label"
                style="@style/DetailsLabel"
                android:text="@string/address_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/owner_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/contact_no_label"
                style="@style/DetailsLabel"
                android:text="@string/contact_no_label"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/address_label"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:id="@+id/tv_detail_name"
                style="@style/Details"
                tools:text="Name"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline"
                app:layout_constraintBaseline_toBaselineOf="@+id/name_label" />

            <TextView
                android:id="@+id/tv_detail_breed"
                style="@style/Details"
                tools:text="Breed"
                app:layout_constraintBaseline_toBaselineOf="@+id/breed_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_gender"
                style="@style/Details"
                tools:text="Gender"
                app:layout_constraintBaseline_toBaselineOf="@+id/gender_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_birth_date"
                style="@style/Details"
                tools:text="Birth Date"
                app:layout_constraintBaseline_toBaselineOf="@+id/birth_date_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_weight"
                style="@style/Details"
                tools:text="Weight"
                app:layout_constraintBaseline_toBaselineOf="@+id/weight_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_owner"
                style="@style/Details"
                tools:text="Owner"
                app:layout_constraintBaseline_toBaselineOf="@+id/owner_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_address"
                style="@style/Details"
                tools:text="Address"
                app:layout_constraintBaseline_toBaselineOf="@+id/address_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <TextView
                android:id="@+id/tv_detail_contact_no"
                style="@style/Details"
                tools:text="Gender"
                app:layout_constraintBaseline_toBaselineOf="@+id/contact_no_label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/detail_guideline" />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_guideline"
                app:layout_constraintGuide_begin="@dimen/detail_guideline_start"
                android:orientation="vertical" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</LinearLayout>