<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">@dimen/item_text_max_width</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailsLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Details">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:maxLines">4</item>
        <item name="android:maxWidth">@dimen/details_text_max_width</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="AddEditLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="EditTextWords">
        <item name="android:maxLength">100</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="EditTextNumbers">
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="PetImageLandscape">
        <item name="android:layout_weight">1</item>
    </style>

</resources>
